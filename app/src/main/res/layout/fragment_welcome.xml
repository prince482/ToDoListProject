<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcome_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/welcome"
        android:textSize="@dimen/_22ssp"
        android:textColor="@color/text_color"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40ssp"
        android:gravity="center"
        android:elevation="@dimen/_16sdp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wlc_logo_IG"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        app:layout_constraintTop_toBottomOf="@id/welcome_TV"
        app:layout_constraintStart_toStartOf="@id/welcome_TV"
        app:layout_constraintEnd_toEndOf="@id/welcome_TV"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/_20ssp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wlc_text1_TV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/wlc_logo_IG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_14sdp"
        android:typeface="sans"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textAlignment="textStart"
        />
    <View
        android:id="@+id/wlc_text_VW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/wlc_text1_TV"
        app:layout_constraintStart_toStartOf="@id/wlc_text1_TV"
        app:layout_constraintEnd_toEndOf="@id/wlc_text1_TV"
        app:layout_constraintBottom_toBottomOf="@id/wlc_text2_TV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wlc_text2_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/wlc_text_VW"
        app:layout_constraintStart_toStartOf="@+id/wlc_text_VW"
        app:layout_constraintEnd_toEndOf="@+id/wlc_text_VW"
        android:textSize="@dimen/_14sdp"
        android:typeface="sans"
        android:textColor="@color/text_color"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textStart"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wlc_text3_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/wlc_text2_TV"
        app:layout_constraintStart_toStartOf="@+id/wlc_text2_TV"
        app:layout_constraintEnd_toEndOf="@+id/wlc_text2_TV"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/text_color"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:typeface="sans"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textStart"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>