<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view">

<!--        WHEN USER WILL CLICK ON CHANGE TEXT FONT-->

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/text_font_change_TV"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:text="text Font"
          android:textAlignment="textStart"
          android:paddingTop="@dimen/_5sdp"
          android:paddingBottom="@dimen/_5sdp"
          android:paddingStart="@dimen/_10sdp"
          android:paddingEnd="@dimen/_10sdp"
          android:textSize="@dimen/_12ssp"
          android:visibility="visible"
          android:elevation="@dimen/_100sdp"
          />


        <!--WHEN USER WILL CLICK ON CHANGE WALLPAPER, TEXT COLOR, TITLE COLOR        -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/change_bg_txtclr_ttlcolor_IV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_10sdp"
            android:elevation="@dimen/_100sdp"
            android:visibility="visible"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>
